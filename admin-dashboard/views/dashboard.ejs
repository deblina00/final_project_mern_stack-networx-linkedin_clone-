<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="main-content">
  <h2 class="fw-bold mb-4">Dashboard</h2>

  <div class="row g-4">

    <!-- USERS -->
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card shadow-sm p-3 h-100 dashboard-card">
        <h6 class="text-muted">Users</h6>
        <div class="d-flex justify-content-between align-items-center">
          <h3><%= stats.users %></h3>

          <% if (stats.usersChange >= 0) { %>
            <span class="text-success fw-bold">
              <i class="bi bi-graph-up-arrow"></i> +<%= stats.usersChange %>%
            </span>
          <% } else { %>
            <span class="text-danger fw-bold">
              <i class="bi bi-graph-down-arrow"></i> <%= stats.usersChange %>%
            </span>
          <% } %>
        </div>
      </div>
    </div>

    <!-- POSTS -->
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card shadow-sm p-3 h-100 dashboard-card">
        <h6 class="text-muted">Posts</h6>
        <div class="d-flex justify-content-between align-items-center">
          <h3><%= stats.posts %></h3>

          <% if (stats.postsChange >= 0) { %>
            <span class="text-success fw-bold">+<%= stats.postsChange %>%</span>
          <% } else { %>
            <span class="text-danger fw-bold"><%= stats.postsChange %>%</span>
          <% } %>
        </div>
      </div>
    </div>

    <!-- COMMENTS -->
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card shadow-sm p-3 h-100 dashboard-card">
        <h6 class="text-muted">Comments</h6>
        <div class="d-flex justify-content-between align-items-center">
          <h3><%= stats.comments %></h3>

          <% if (stats.commentsChange >= 0) { %>
            <span class="text-success fw-bold">+<%= stats.commentsChange %>%</span>
          <% } else { %>
            <span class="text-danger fw-bold"><%= stats.commentsChange %>%</span>
          <% } %>
        </div>
      </div>
    </div>

    <!-- MESSAGES -->
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card shadow-sm p-3 h-100 dashboard-card">
        <h6 class="text-muted">Messages</h6>
        <div class="d-flex justify-content-between align-items-center">
          <h3><%= stats.messages %></h3>

          <% if (stats.messagesChange >= 0) { %>
            <span class="text-success fw-bold">+<%= stats.messagesChange %>%</span>
          <% } else { %>
            <span class="text-danger fw-bold"><%= stats.messagesChange %>%</span>
          <% } %>
        </div>
      </div>
    </div>

    <!-- NOTIFICATIONS -->
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card shadow-sm p-3 h-100 dashboard-card">
        <h6 class="text-muted">Notifications</h6>
        <div class="d-flex justify-content-between align-items-center">
          <h3><%= stats.notifications %></h3>

          <% if (stats.notificationsChange >= 0) { %>
            <span class="text-success fw-bold">+<%= stats.notificationsChange %>%</span>
          <% } else { %>
            <span class="text-danger fw-bold"><%= stats.notificationsChange %>%</span>
          <% } %>
        </div>
      </div>
    </div>

    <!-- EXTRA CARD (OPTIONAL FUTURE GROWTH METRIC) -->
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card shadow-sm p-3 h-100 dashboard-card">
        <h6 class="text-muted">Engagement</h6>
        <div class="d-flex justify-content-between align-items-center">
          <h3><%= stats.engagement || 0 %></h3>
          <span class="text-primary fw-bold">+12%</span>
        </div>
      </div>
    </div>

  </div>

  <!-- Chart -->
  <div class="mt-5">
    <canvas id="activityChart" height="90"></canvas>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('activityChart');
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: ['Mon','Tue','Wed','Thu','Fri','Sat','Sun'],
      datasets: [{
        label: 'Posts this week',
        data: [12,19,3,5,2,3,9],
        borderWidth: 2,
        borderColor: '#0d6efd',
        backgroundColor: 'rgba(13,110,253,0.15)',
        tension: .3
      }]
    },
    options: { responsive: true }
  });
</script>

<style>
  /* More professional dashboard look */
  .dashboard-card {
    border-radius: 12px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .dashboard-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.12);
  }
</style>

<%- include('partials/footer') %>
