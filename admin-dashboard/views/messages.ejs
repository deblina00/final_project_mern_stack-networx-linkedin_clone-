<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="main-content">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Messages</h3>

    <form class="d-flex" method="GET" action="/messages">
      <input class="form-control me-2" name="q" value="<%= q %>" placeholder="Search messages" />
      <button class="btn btn-primary">Search</button>
    </form>
  </div>

  <div class="card shadow p-3">
    <table class="table">
      <thead>
        <tr>
          <th>Sender</th>
          <th>Message</th>
          <th>Conversation</th>
          <th>At</th>
          <th class="text-end">Action</th>
        </tr>
      </thead>

      <tbody>
        <% messages.forEach(m => { %>
          <tr id="message-<%= m._id %>">
            <td>
              <strong><%= m.sender ? m.sender.f_name : '—' %></strong><br>
              <small><%= m.sender ? m.sender.email : '' %></small>
            </td>
            <td style="max-width:400px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;"><%= m.message %></td>
            <td><%= m.conversation ? m.conversation._id : '—' %></td>
            <td><%= new Date(m.createdAt).toLocaleString() %></td>
            <td class="text-end">
              <button class="btn btn-sm btn-danger" onclick="openConfirmModal({
      title: 'Delete message',
      text: 'Are you sure you want to delete this message?',
      showReason: false,
      onConfirm: (reason) => deleteResource('/messages/<%= m._id %>', 'message-<%= m._id %>', reason)
       })">Delete</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <nav class="mt-3">
    <ul class="pagination">
      <% for(let i=1;i<=pages;i++) { %>
        <li class="page-item <%= i===page ? 'active' : '' %>">
          <a class="page-link" href="/messages?page=<%= i %>&q=<%= q %>"><%= i %></a>
        </li>
      <% } %>
    </ul>
  </nav>
</div>

<%- include('partials/footer') %>
<!-- Page scripts -->
<script src="/js/deleteModal.js"></script>