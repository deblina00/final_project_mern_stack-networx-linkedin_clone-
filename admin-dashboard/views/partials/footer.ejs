<!-- Minimal footer: modal markup only (no AJAX here) -->
<!-- Delete / Confirm / Reason modal (reused by delete & block actions) -->
<div
  class="modal fade"
  id="confirmActionModal"
  tabindex="-1"
  aria-labelledby="confirmActionLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmActionLabel">Confirm action</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p id="confirmActionText">Are you sure?</p>

        <div id="confirmReasonWrap" class="mb-0" style="display:none;">
          <label class="form-label">Reason (optional)</label>
          <input
            id="confirmReason"
            class="form-control"
            placeholder="Enter reason (will be sent to user)"
          />
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Cancel</button>
        <button
          id="confirmActionBtn"
          type="button"
          class="btn btn-danger"
        >Confirm</button>
      </div>
    </div>
  </div>
</div>

<!-- Global scripts -->
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
></script>
<script src="/js/common.js"></script>